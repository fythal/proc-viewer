<h1>Listing panels</h1>

<ul>
  <% @boards.each do |board| %>
  <li><%= board.name %>
    <table>
      <tbody>
        <tr>
          <% board.panels.each do |panel| %>
          <td class="panel"><%= link_to panel.number, panel_path(panel) %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </li>
  <% end %>
</ul>

<br>

<%= link_to 'New Panel', new_panel_path %>
