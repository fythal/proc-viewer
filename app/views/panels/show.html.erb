<p id="notice"><%= notice %></p>

<p>
  <strong>Number:</strong>
  <%= @panel.number %>
</p>

<table class="panel">
  <thead>
    <!-- 横方向のヘッダー -->
    <th></th>
    <% 1.upto(@panel.width) do |index| %>
    <th><%= index %></th>
    <% end %>
  </thead>
  <tbody>
    <% @panel.items(array: true).each_with_index do |items, y0| %>
    <tr>
      <td class="vertical_header"><%= num_to_alpha(y0+1) %></td>
      <% items.each_with_index do |item, x0| %>
      <td id="<%= loc_id(x0+1, y0+1) %>"><%= link_or_name(item) %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_panel_path(@panel) %> |
<%= link_to 'Back', panels_path %>
